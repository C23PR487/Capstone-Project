<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthenticationActivity"
    android:background="@drawable/page_background"
    android:backgroundTint="@color/primary_black_85_alpha"
    android:backgroundTintMode="src_atop">
    <ImageView
        android:id="@+id/image_view_app_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="143dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_tagline"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:srcCompat="@drawable/app_logo"
        />

    <TextView
        android:id="@+id/text_view_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/tagline"
        android:theme="@style/Theme.LapakIn.Toolbar"
        app:fontFamily="@font/rubik_regular"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/primary_white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_google"
        android:backgroundTint="@color/primary_light_red"
        app:icon="@drawable/google_logo"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/medium_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_tagline"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginEnd="@dimen/medium_space"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>