<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.AuthenticationActivity">
    <TextView
        android:id="@+id/text_view_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.LapakIn.Toolbar"
        android:fontFamily="@font/sriracha_regular"
        android:textSize="48sp"
        tools:text="LapakIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_tagline"
        android:layout_marginBottom="@dimen/medium_space"
        />

    <TextView
        android:id="@+id/text_view_tagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tagline"
        android:theme="@style/Theme.LapakIn.Toolbar"
        android:fontFamily="@font/sriracha_regular"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/large_space"
        android:layout_marginEnd="@dimen/large_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_google"
        android:backgroundTint="@color/primary_light_red"
        app:icon="@drawable/google_logo"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/medium_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_tagline"
        android:layout_marginStart="@dimen/medium_space"
        android:layout_marginEnd="@dimen/medium_space"
        />


</androidx.constraintlayout.widget.ConstraintLayout>